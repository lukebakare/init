sudo yum update -y
sudo yum install -y git

USER=centos
VERSION=1.13.5
OS=linux
ARCH=amd64

curl -O https://dl.google.com/go/go$VERSION.$OS-$ARCH.tar.gz
sudo tar -C /usr/local -xzf go$VERSION.$OS-$ARCH.tar.gz
rm go$VERSION.$OS-$ARCH.tar.gz
# su to root in order to modify /etc/ directory
grep -e 'export PATH=\$PATH:/usr/local/go/bin\nexport GOPATH=/$USER/go' /etc/profile.d/go.sh || sudo su - -c "echo -e 'export PATH=\$PATH:/usr/local/go/bin\nexport GOPATH=/$USER/go' > /etc/profile.d/go.sh"

# mkdir -p /opt/go/{src,bin,pkg}
# mkdir -p /opt/go/src/github.com/lukebakare
