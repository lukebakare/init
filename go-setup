yum update -y
yum install -y git

VERSION=1.13.5
OS=linux
ARCH=amd64

curl -O https://dl.google.com/go/go$VERSION.$OS-$ARCH.tar.gz
sudo tar -C /usr/local -xzf go$VERSION.$OS-$ARCH.tar.gz
sudo mkdir -p /opt/go/{src,bin,pkg}
grep 'export PATH=$PATH:/usr/local/go/bin' /etc/profile || echo 'export PATH=$PATH:/usr/local/go/bin' >> /etc/profile
grep 'GOPATH=/opt/go' /etc/profile || echo 'GOPATH=/opt/go' >> /etc/profile

mkdir -p /opt/go/src/github.com/lukebakare
