yum update -y
yum install -y git

VERSION=1.13.5
OS=linux
ARCH=amd64

curl -O https://dl.google.com/go/go$VERSION.$OS-$ARCH.tar.gz
tar -C /usr/local -xzf go$VERSION.$OS-$ARCH.tar.gz
mkdir -p /opt/go/{src,bin,pkg}
grep 'export PATH=$PATH:/usr/local/go/bin\nexport GOPATH=/opt/golang' /etc/profile.d/go.sh || echo 'export PATH=$PATH:/usr/local/go/bin\nexport GOPATH=/opt/golang' > /etc/profile.d/go.sh


mkdir -p /opt/go/src/github.com/lukebakare
