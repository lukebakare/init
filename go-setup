sudo yum update -y
sudo yum install -y git

VERSION=1.13.5
OS=linux
ARCH=amd64

curl -O https://dl.google.com/go/go$VERSION.$OS-$ARCH.tar.gz
tar -C /usr/local -xzf go$VERSION.$OS-$ARCH.tar.gz
grep -e 'export PATH=$PATH:/usr/local/go/bin\nexport GOPATH=/opt/go' /etc/profile.d/go.sh || sudo echo -e 'export PATH=$PATH:/usr/local/go/bin\nexport GOPATH=/opt/go' > /etc/profile.d/go.sh


